<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/car_repair_background</item>
        <item name="colorPrimaryDark">@color/car_repair_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@drawable/gradient_background</item>
        <item name="textcolor">#000000</item>
        <item name="buttoncolor">@drawable/custom_button</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="darkMode" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@color/colorAccent</item>
        <item name="textcolor">#FFFFFF</item>
        <item name="buttoncolor">@drawable/custom_button</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>
</resources>
