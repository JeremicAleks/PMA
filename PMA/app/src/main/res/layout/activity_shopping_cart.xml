<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ShoppingCartActivity"
    android:background="@drawable/gradient_background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_shopping_cart"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Shopping cart"
        app:titleMarginStart="140dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="184dp"
        android:layout_height="176dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tb_shopping_cart"
        app:srcCompat="@mipmap/collect_cars_foreground" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="380dp"
        android:layout_height="374dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Car"
                android:layout_marginBottom="3dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#f1f1f1"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="Price"
                android:layout_marginBottom="3dp"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="#f1f1f1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="Renaul Clio"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="#f1f1f1"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="11000e"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="#f1f1f1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="Skoda Superb"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="#f1f1f1"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:text="22000e"
                android:textAlignment="center"
                android:textSize="16sp"
                android:background="#f1f1f1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>