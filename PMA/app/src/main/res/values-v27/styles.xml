<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/car_repair_background</item>
        <item name="colorPrimaryDark">@drawable/gradient_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@drawable/gradient_background</item>
        <item name="textcolor">#000000</item>
        <item name="buttoncolor">@drawable/custom_button</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges
        </item>
    </style>

    <style name="darkMode" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/car_repair_background</item>
        <item name="colorPrimaryDark">@drawable/gradient_background_night</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">@drawable/gradient_background_night</item>
        <item name="textcolor">#000000</item>
        <item name="buttoncolor">@drawable/custom_button_night</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="android:windowLayoutInDisplayCutoutMode">
            shortEdges
        </item>
    </style>
</resources>